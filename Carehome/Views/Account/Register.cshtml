<style>
    .form-group {
        position: relative;
    }

    /* إضافة مساحة للأيقونة داخل حقل الإدخال */
    .form-control {
        padding-right: 40px; /* مساحة كافية للأيقونة */
        width: 100%; /* تأكد من أن الإدخال يملأ العرض */
        box-sizing: border-box; /* لضمان أن padding جزء من العرض الإجمالي */
    }

    /* الأيقونة داخل حقل الإدخال */
    .eye-icon {
        position: absolute;
        top: 40px;
        right: 10px;
        z-index: 2;
        color: #868686;
    }

        /* تغيير لون الأيقونة عند التمرير فوقها */
        .eye-icon:hover {
            color: #000;
        }

</style>
<script>
    document.getElementById('togglePassword').addEventListener('click', function () {
        var passwordInput = document.getElementById('password');
        var icon = this.querySelector('i');

        // تبديل نوع الإدخال بين password و text
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';  
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash'); 
        } else {
            passwordInput.type = 'password';  
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');  
        }
    });

    // إظهار/إخفاء كلمة المرور في حقل "Confirm Password"
    document.getElementById('toggleConfirmPassword').addEventListener('click', function () {
        var confirmPasswordInput = document.getElementById('confirmPassword');
        var icon = this.querySelector('i');

        // تبديل نوع الإدخال بين password و text
        if (confirmPasswordInput.type === 'password') {
            confirmPasswordInput.type = 'text';  // تغيير النوع إلى نص لعرض كلمة المرور
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');  // تغيير الأيقونة إلى العين المغلقة
        } else {
            confirmPasswordInput.type = 'password';  // إعادة النوع إلى password لإخفاء كلمة المرور
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');  // تغيير الأيقونة إلى العين المفتوحة
        }
    });
</script>

