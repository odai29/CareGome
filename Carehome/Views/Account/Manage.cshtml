@model Carehome.ViewModels.ManageUserViewModel

@{
    ViewData["Title"] = "Manage";
}

<h1 style="text-align:center">Manage</h1>


<hr />
<div class="row container mt-5 d-flex justify-content-center">
    <div class="col-md-8" style="width:450px;margin-left:300px">
        <form asp-action="Manage">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" readonly />

            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div style="text-align:center;margin-left:0px">
        <p>
            Back To
            <a asp-action="Index" asp-controller="Home"> Home</a>
        </p>
       
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
