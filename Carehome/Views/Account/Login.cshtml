<div class="container mt-5 d-flex justify-content-center" style="min-height: 40vh;">
    <div class="row">
        <!-- العمود الذي يحتوي على الصورة -->
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            <img src="~/img/blurbimg.png" class="img-fluid" alt="Image Description" />
        </div>

        <!-- العمود الذي يحتوي على النموذج -->
        <div class="col-md-6 ms-auto" >
            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <br />
                <div class="form-group position-relative">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" id="password" class="form-control" type="password" />
                    <span id="togglePassword" class="eye-icon">
                        <i class="far fa-eye"></i>
                    </span>
                </div>
               
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>

            <div>
                <p style="text-align:center;">
                    I Don't Have an Account <a asp-action="Register">Register</a>
                </p>
            </div>
        </div>
    </div>
</div>
<style>
    .form-group {
        position: relative;
    }

    /* إضافة مساحة للأيقونة داخل حقل الإدخال */
    .form-control {
        padding-right: 40px; /* مساحة كافية للأيقونة */
        width: 100%; /* تأكد من أن الإدخال يملأ العرض */
        box-sizing: border-box; /* لضمان أن padding جزء من العرض الإجمالي */
    }

    /* الأيقونة داخل حقل الإدخال */
    .eye-icon {
        position: absolute;
        top: 40px;
        right: 10px;
        z-index: 2;
        color: #868686;
    }

        /* تغيير لون الأيقونة عند التمرير فوقها */
        .eye-icon:hover {
            color: #000;
        }

</style>
<script>
    document.getElementById('togglePassword').addEventListener('click', function () {
        var passwordInput = document.getElementById('password');
        var icon = this.querySelector('i');

        // تبديل نوع الإدخال بين password و text
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';  // تغيير النوع إلى نص لعرض كلمة المرور
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');  // تغيير الأيقونة إلى العين المغلقة
        } else {
            passwordInput.type = 'password';  // إعادة النوع إلى password لإخفاء كلمة المرور
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');  // تغيير الأيقونة إلى العين المفتوحة
        }
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
